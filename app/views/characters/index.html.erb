<button type="button" id="characters-index">Characters JSON</button>
<div id="json-characters">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Alias</th>
      <th>Superpowers</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="json-characters-table">

  </tbody>
</table>
</div>
<div id="js-form">
x
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Callsign</th>
      <th>Superpower</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= link_to character.name, character_path(character) %></td>
        <td><%= link_to character.alias, character_path(character) %></td>
        <td><% character.superpowers.each do |c_s| %>
          <%= link_to c_s.name, character_path(character) %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

