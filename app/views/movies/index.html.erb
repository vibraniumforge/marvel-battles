<h1>List of all Movies</h1>
<br>
<button type="button" id="movies-index-btn">Movies JSON</button>
<button type="button" id="movies-index-sorted-btn">Movies JSON Sorted</button>
<button type="button" id="movie-show-one-btn">Show First Movie</button>

<div id="json-movies-first">
  <table>
    <thead>
      <tr>
        <th>Name(First)</th>
        <th>Year</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody id="json-movies-table-first">
   
    </tbody>
  </table>
</div>

<div id="json-movies">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Year</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody id="json-movies-table">
   
    </tbody>
  </table>
</div>


<div id="json-movies-sorted">
  <table>
    <thead>
      <tr>
        <th>Name(Sorted)</th>
        <th>Year</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody id="json-movies-table-sorted">
   
    </tbody>
  </table>
</div>



<div id="js-new-movie-form-div">

</div>

<br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Year</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.name, movie_path(movie) %></td>
        <td><%= link_to movie.year, movie_path(movie) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to "New Movie", new_movie_path %>
